        <activity
            android:name="com.example.whereru.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.whereru.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.example.whereru.CheckinActivity"
            android:label="@string/title_activity_checkin" >
        </activity>
        <activity
            android:name="com.example.whereru.MessageActivity"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name="com.example.whereru.ReadMessageActivity"
            android:label="@string/title_activity_read_message" >
        </activity>
        <activity
            android:name="com.example.whereru.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.whereru.CheckinMessageActivity"
            android:label="@string/title_activity_checkin_message" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDikDTiE-hnbBH1rMQHulwFCeAnoMqGigs" />
